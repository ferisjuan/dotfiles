# unbindings
keybind = super+d=unbind
keybind = super+shift+D=unbind
keybind = super+alt+shift+h=unbind
keybind = super+w=unbind
keybind = super+alt+arrow_down=unbind
keybind = super+alt+arrow_left=unbind
keybind = super+alt+arrow_right=unbind
keybind = super+alt+arrow_up=unbind
keybind = super+alt+i=unbind

# bindings
keybind = super+w=close_surface
keybind = alt+d=new_split:down
keybind = alt+shift+d=new_split:right

# navigate surfaces
keybind = alt+arrow_left=goto_split:left
keybind = alt+arrow_down=goto_split:down
keybind = alt+arrow_up=goto_split:up
keybind = alt+arrow_right=goto_split:right

# resize surfaces
keybind = super+arrow_left=resize_split:left,20
keybind = super+arrow_down=resize_split:down,20
keybind = super+arrow_up=resize_split:up,20
keybind = super+arrow_right=resize_split:right,20

# config
keybind = super+alt+r=reload_config
keybind = super+alt+o=open_config

